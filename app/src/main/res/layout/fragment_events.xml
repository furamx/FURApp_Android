<android.support.v4.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:context="fura.com.furapp_android.view.EventsFragment">

        <!-- Cardview from events -->
        <android.support.v7.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/card_event"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            card_view:cardCornerRadius="4dp"
            card_view:cardElevation="4dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <!--Imagen de portada-->
                <ImageView
                    android:id="@+id/img_cover_card_events"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:src="@drawable/parque"
                    android:scaleType="centerCrop"
                    />
                <!-- Distancia del usuario -->

                <!-- Tipo -->
                <TextView
                    android:id="@+id/txv_kind_card_events"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Tipo"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <!-- Fecha -->
                    <TextView
                        android:id="@+id/txv_date_card_events"
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        android:layout_weight="1"
                        android:text="Fecha"
                        />
                    <!-- Ubicación -->
                    <TextView
                        android:id="@+id/txv_ubication_card_events"
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        android:layout_weight="1"
                        android:text="Ubicación"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">
                    <!-- Compartir -->
                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:theme="@style/Widget.AppCompat.Button.Borderless"
                        android:text="Compartir"
                        android:layout_weight="1"/>
                    <!-- Asistir -->
                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:theme="@style/Widget.AppCompat.Button.Borderless"
                        android:text="Asistir"
                        android:layout_weight="1"/>
                    <!-- Expandir -->

                </LinearLayout>

                <!-- Descripción-->
            </LinearLayout>



        </android.support.v7.widget.CardView>

        <!-- Cardview from events -->
        <android.support.v7.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/card_event"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            card_view:cardCornerRadius="4dp"
            card_view:cardElevation="4dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <!--Imagen de portada-->
                <ImageView
                    android:id="@+id/img_cover_card_events"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:src="@drawable/parque"
                    android:scaleType="centerCrop"
                    />
                <!-- Distancia del usuario -->

                <!-- Tipo -->
                <TextView
                    android:id="@+id/txv_kind_card_events"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Tipo"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <!-- Fecha -->
                    <TextView
                        android:id="@+id/txv_date_card_events"
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        android:layout_weight="1"
                        android:text="Fecha"
                        />
                    <!-- Ubicación -->
                    <TextView
                        android:id="@+id/txv_ubication_card_events"
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        android:layout_weight="1"
                        android:text="Ubicación"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">
                    <!-- Compartir -->
                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:theme="@style/Widget.AppCompat.Button.Borderless"
                        android:text="Compartir"
                        android:layout_weight="1"/>
                    <!-- Asistir -->
                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:theme="@style/Widget.AppCompat.Button.Borderless"
                        android:text="Asistir"
                        android:layout_weight="1"/>
                    <!-- Expandir -->

                </LinearLayout>

                <!-- Descripción-->
            </LinearLayout>



        </android.support.v7.widget.CardView>

    </LinearLayout>
</android.support.v4.widget.NestedScrollView>



