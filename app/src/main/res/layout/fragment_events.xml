<android.support.v4.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:context="fura.com.furapp_android.view.EventsFragment">

        <!-- Cardview from events -->
        <android.support.v7.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/card_event"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/event_card_margin"
            card_view:cardElevation="8dp">
            <!-- Card content -->
            <LinearLayout
                android:id="@+id/lyt_card_event"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <!--Cover image-->
                    <ImageView
                        android:id="@+id/img_cover_card_events"
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:src="@drawable/parque"
                        android:scaleType="centerCrop"
                        />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:background="@color/blackWithTransparency"
                        android:layout_gravity="bottom">
                        <!-- Kind -->
                        <TextView
                            android:id="@+id/txv_kind_card_events"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/event_details_margin"
                            android:layout_weight="1"
                            style="@style/EventCard_Title"
                            android:text="ArborizaciÃ³n"
                            />
                        <!-- Distance to user-->
                        <TextView
                            android:id="@+id/txv_distance_card_events"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/event_details_margin"
                            android:textAlignment="textEnd"
                            android:layout_weight="1"
                            style="@style/EventCard_Title"
                            android:text="a 7km de ti"
                            />
                    </LinearLayout>
                </FrameLayout>
                <!-- Event details -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <!-- Event date and time-->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_weight="1">
                        <!-- Date -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_margin="@dimen/event_details_margin"
                            android:layout_weight="1">
                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="@dimen/event_details_margin"
                                android:src="@drawable/event"/>
                            <TextView
                                android:id="@+id/txv_date_card_events"
                                android:layout_height="wrap_content"
                                android:layout_width="match_parent"
                                android:layout_weight="1"
                                style="@style/EventCard_Details"
                                android:text="01/Dic/2017"
                                />
                        </LinearLayout>
                        <!-- Time -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_margin="@dimen/event_details_margin"
                            android:layout_weight="1">
                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="@dimen/event_details_margin"
                                android:src="@drawable/time"/>
                            <TextView
                                android:id="@+id/txv_time_card_events"
                                android:layout_height="wrap_content"
                                android:layout_width="match_parent"
                                android:layout_weight="1"
                                style="@style/EventCard_Details"
                                android:text="09:00 a.m."
                                />
                        </LinearLayout>
                    </LinearLayout>
                    <!-- Event location -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:layout_weight="1">
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginRight="@dimen/event_details_margin"
                            android:src="@drawable/location" />
                        <TextView
                            android:id="@+id/txv_location_card_events"
                            android:layout_height="wrap_content"
                            android:layout_width="match_parent"
                            android:layout_gravity="center_vertical"
                            style="@style/EventCard_Details"
                            android:text="Parque Panorama"
                            />
                    </LinearLayout>
                </LinearLayout>
                <!-- Event actions -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">
                    <!-- Share -->
                    <Button
                        android:id="@+id/btn_share_event_card"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        style="@style/Widget.AppCompat.Button.Borderless"
                        android:textColor="@color/colorAccent"
                        android:text="Compartir"
                        android:layout_weight="1"/>
                    <!-- Attend -->
                    <Button
                        android:id="@+id/btn_attend_event_card"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        style="@style/Widget.AppCompat.Button.Borderless"
                        android:textColor="@color/colorAccent"
                        android:text="Asistir"
                        android:layout_weight="1"/>
                    <!-- Expand to view event description -->
                    <ImageButton
                        android:id="@+id/btn_drop_down_event_card"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        style="@style/Widget.AppCompat.Button.Borderless"
                        android:src="@drawable/arrow_down"
                        android:layout_weight="1"/>
                </LinearLayout>
            </LinearLayout>
        </android.support.v7.widget.CardView>
    </LinearLayout>
</android.support.v4.widget.NestedScrollView>



